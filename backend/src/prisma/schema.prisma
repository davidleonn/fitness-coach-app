generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Crash { 
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  message   String
  type      String
} 

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  name      String
  surname   String
  routines  Routine[] @relation("UserRoutines")
  diets     Diet[]    @relation("UserDiets")
}

model Routine {
  id        String     @id @default(uuid())
  name      String
  user      User[]     @relation("UserRoutines")
  workouts  Workout[]
}

model Workout {
  id           String      @id @default(uuid())
  name         String
  routine      Routine     @relation(fields: [routineId], references: [id])
  routineId    String
  exercises    Exercise[]
}

model Exercise {
  id           String      @id @default(uuid())
  name         String
  description  String?
  workout      Workout     @relation(fields: [workoutId], references: [id])
  workoutId    String
}

model Diet {
  id       String   @id @default(uuid())
  name     String
  user     User[]   @relation("UserDiets")
  meals    Meal[]
}

model Meal {
  id           String      @id @default(uuid())
  name         String
  description  String?
  diet         Diet        @relation(fields: [dietId], references: [id])
  dietId       String
  foods        Food[]
}

model Food {
  id           String      @id @default(uuid())
  name         String
  description  String?
  meal         Meal        @relation(fields: [mealId], references: [id])
  mealId       String
}