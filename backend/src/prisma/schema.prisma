generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Crash { 
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  message   String
  type      String
} 

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  name      String
  surname   String
  password  String  
}

model Routine {
  id        String     @id @default(uuid())
  name      String  
  workouts  String
}

model Diet {
  id       String   @id @default(uuid())
  name     String  
  meals    String
}

model Client {
  id          String   @id @default(uuid())
  name        String
  surname     String
  age         Int
  email       String
  createdAt   DateTime @default(now())
  objective   String?
  diet        String
  Routine     String
  description String?
}